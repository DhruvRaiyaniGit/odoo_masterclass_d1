<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="expense_tracker.TagsList">
        <div>
            <h2>Tags</h2>
            <div class="d-flex">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Color</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="state.tags" t-as="tag" t-key="tag.id">
                            <tr>
                                <td><t t-esc="tag.name"/></td>
                                <td><t t-esc="tag.color"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
    </t>
</templates>
