<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="expense_tracker.TagsList">
        <div class="rounded-6 shadow p-4 o_content_modal_rounded_shades" style="margin:7% 5%">
            <h2 class="text-white">Tags</h2>
            <hr />
            <div class="d-flex mx-5 m-auto">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr class="table-success">
                            <th>Name</th>
                            <th>Color</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="state.tags" t-as="tag" t-key="tag.id">
                            <tr>
                                <td><t t-esc="tag.name"/></td>
                                <td><t t-esc="tag.color"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
    </t>
</templates>
