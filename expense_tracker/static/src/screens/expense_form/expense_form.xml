<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <t t-name="expense_tracker.ExpenseForm">
        <div class="expense-form">
            <h2>Add Expense</h2>
            <form t-on-submit.prevent="addExpense">
                <div>
                    <label>Description:</label>
                    <input type="text" t-model="state.newExpense.name" required/>
                </div>
                <div>
                    <label>Date:</label>
                    <input type="date" t-model="state.newExpense.date" required/>
                </div>
                <div>
                    <label>Amount:</label>
                    <input type="number" t-model="state.newExpense.amount" required/>
                </div>
                <div>
                    <label>Category:</label>
                    <select t-model="state.newExpense.category">
                        <option value="food">Food</option>
                        <option value="transport">Transport</option>
                        <option value="entertainment">Entertainment</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                <button type="submit">Add Expense</button>
            </form>
        </div>
    </t>
</odoo>
