<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="expense_tracker.ExpenseForm">
        <div class="expense-form">
            <h2>Add Expense</h2>
            <div class="d-flex">
                <form class="w-100" t-on-submit.prevent="addExpense">
                    <div class="form-group">
                        <label>Description:</label>
                        <input class="form-control" type="text" t-model="state.newExpense.name" required="true"/>
                    </div>
                    <div class="form-group">
                        <label>Date:</label>
                        <input class="form-control" type="date" t-model="state.newExpense.date" required="true" />
                    </div>
                    <div class="form-group">
                        <label>Amount:</label>
                        <input class="form-control" type="number" t-model="state.newExpense.amount" required="true" />
                    </div>
                    <div class="form-group">
                        <label>Category:</label>
                        <select class="form-control" t-model="state.category">
                            <t t-foreach="state.categories" t-as="category" t-key="category.id">
                                <option t-att-value="category.id">category.name</option>
                            </t>
                        </select>
                    </div>
                    <button class="btn btn-primary" type="submit">Add Expense</button>
                </form>
            </div>
        </div>
    </t>
</templates>
