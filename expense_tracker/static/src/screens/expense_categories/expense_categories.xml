<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="expense_tracker.CategoriesList">
        <div class="rounded-6 shadow p-4 o_content_modal_rounded_shades" style="margin:7% 5%">
            <h2 class="text-white">Categories</h2>
            <hr />
            <div class="d-flex mx-5 m-auto">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr class="table-success">
                            <th>Icon</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="state.categories" t-as="category" t-key="category.id">
                            <tr t-att-data-id="category.id" t-on-click="_onClickCategory">
                                <td><t t-esc="category.icon"/></td>
                                <td><t t-esc="category.name"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
    </t>
</templates>
