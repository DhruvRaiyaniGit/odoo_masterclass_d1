<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="expense_tracker.CategoriesList">
        <div>
            <h2>Categories</h2>
            <table>
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="state.categories" t-as="category" t-key="category.id">
                        <tr>
                            <td><t t-esc="category.name"/></td>
                            <td><t t-esc="category.date"/></td>
                            <td><t t-esc="category.amount"/></td>
                            <td><t t-esc="category.category"/></td>
                        </tr>
                    </t>
                </tbody>
            </table>
            <p>Total Amount: <t t-esc="totalAmount"/></p>
        </div>
    </t>
</templates>
