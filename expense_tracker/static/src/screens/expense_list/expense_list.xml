<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="expense_tracker.PersonalExpenseList">
        <div>
            <h2>Personal Expenses</h2>
            <table>
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="state.expenses" t-as="expense">
                        <tr>
                            <td><t t-esc="expense.name"/></td>
                            <td><t t-esc="expense.date"/></td>
                            <td><t t-esc="expense.amount"/></td>
                            <td><t t-esc="expense.category"/></td>
                        </tr>
                    </t>
                </tbody>
            </table>
            <p>Total Amount: <t t-esc="totalAmount"/></p>
        </div>
    </t>
</templates>
