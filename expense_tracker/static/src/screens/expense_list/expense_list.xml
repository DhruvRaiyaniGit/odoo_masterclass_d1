<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="expense_tracker.PersonalExpenseList">
        <div class="rounded-6 shadow p-3 o_content_modal_rounded_shades">
            <div class="mb-4 d-flex justify-content-between" t-if="!props.ignoreCreate">
                <h2 class="text-white">
                    Personal Expenses
                </h2>
                <button type="button" class="btn btn-primary" t-on-click="_onCreateExpense">
                    <span class="fs-3">Create Expense</span>
                </button>
            </div>
            <table class="table table-dark table-hover">
                <thead>
                    <tr class="table-success">
                        <th>Description</th>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="state.expenses" t-as="expense" t-key="expense.id">
                        <tr t-att-data-id="expense.id" t-on-click="_onClickExpenseRow">
                            <td><t t-esc="expense.name"/></td>
                            <td><t t-esc="expense.date"/></td>
                            <td><t t-esc="expense.amount"/></td>
                            <td><t t-esc="expense.category"/></td>
                        </tr>
                    </t>
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="2"></td>
                        <td>
                            <b>Total Amount: <t t-esc="totalAmount"/></b>
                        </td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </t>
</templates>
