<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="expense_tracker.PersonalExpenseList">
        <div>
            <div class="d-flex justify-content-between" t-if="!props.ignoreCreate">
                <h2>
                    Personal Expenses
                </h2>
                <button class="btn btn-primary" t-on-click="_onCreateExpense">Create Expense</button>
            </div>
            <div class="d-flex">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Category</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="state.expenses" t-as="expense" t-key="expense.id">
                            <tr t-att-data-id="expense.id" t-on-click="_onClickExpenseRow">
                                <td><t t-esc="expense.name"/></td>
                                <td><t t-esc="expense.date"/></td>
                                <td><t t-esc="expense.amount"/></td>
                                <td><t t-esc="expense.category"/></td>
                            </tr>
                        </t>
                    </tbody>
                    <tfoot>
                        <td colspan="2"></td>
                        <td>
                            <p>Total Amount: <t t-esc="totalAmount"/></p>
                        </td>
                        <td></td>
                    </tfoot>
                </table>
            </div>
        </div>
    </t>
</templates>
